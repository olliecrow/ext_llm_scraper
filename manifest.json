{
  "manifest_version": 3,
  "name": "Webpage Scraper",
  "version": "1.1",
  "description": "Scrapes webpage content into a Markdown file for data analysis",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "downloads",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/lib/readability.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
