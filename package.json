{
  "name": "webpage-scraper-extension",
  "version": "2.0.0",
  "description": "Chrome extension for scraping webpage content into Markdown format",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --no-coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "format:check": "prettier --check src/**/*.js",
    "build": "node scripts/build.js",
    "build:watch": "node scripts/watch.js",
    "clean": "rm -rf dist coverage *.zip",
    "package": "npm run build && node scripts/package.js",
    "check": "npm run format:check && npm run lint && npm run test:unit",
    "check:all": "npm run format:check && npm run lint && npm run test:coverage",
    "precommit": "npm run check",
    "dev": "npm run build && npm run build:watch",
    "help": "node scripts/dev-help.js"
  },
  "keywords": [
    "chrome-extension",
    "web-scraper",
    "markdown",
    "readability"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@types/chrome": "^0.0.254",
    "archiver": "^6.0.1",
    "babel-jest": "^30.0.5",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": ["js", "json"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/lib/**",
      "!src/**/*.test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/__tests__/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
